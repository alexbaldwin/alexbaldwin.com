<% wrap_layout :layout do %>
	<div class="article">
		<h1 class="title"><%= current_page.title %></h2>
	    <h2 class="byline">By Alex Baldwin â€¢ <%= current_page.date.strftime('%B %e, %Y') %></h3>
	    <section>
	    	<%= yield %>
	    </section>
	    <nav>
		    <% next_article = current_article.previous_article %>
	    	<% if next_article %>
	    		<label>Next</label>
	      	<%= link_to "#{next_article.title} &raquo;", next_article.url %>
	      <% end %>
	    </nav>
	</div>

	<script type="text/javascript">
	analytics.track('Read an article', {
    	article        : <%= current_page.title %>,
	});
</script>

<% end %>
